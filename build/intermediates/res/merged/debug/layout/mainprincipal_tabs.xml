<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:orientation="vertical"><!-- android:background="@color/panelTabLista" -->
    
    <!-- Cabecera -->
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:orientation="vertical"
	    android:layout_gravity="center_horizontal"
	    android:layout_weight="1">
	    	    
        <ListView 
			android:id="@+id/lista" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:divider="#000000" 
			android:dividerHeight="1dp"
			android:layout_gravity="center"
			android:drawSelectorOnTop="false"/><!-- #FFFFFF -->
	    
	</LinearLayout>	  
	
	<!-- Detalle -->	
	
	<LinearLayout android:id="@+id/lays"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
        
	    <View
	        android:layout_width="wrap_content"
	        android:layout_height="1dp"
	        android:background="@color/line"/>
	   
	   <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"	              
	        android:orientation="horizontal"
	        android:background="@drawable/draw_button_gen">
	    
	    	<RelativeLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/draw_button_gen">
		        <Button
		            android:id="@+id/btnSalir"
		            android:layout_width="108dp"
		            android:layout_height="25dp"
		            android:layout_marginLeft="1dp" 
		            android:text="@string/btn_salir" 
		            android:textSize="15sp"
		            android:background="@drawable/draw_button_gen"
		            android:textColor="@color/white"
		            android:onClick="EventoSalir"
		            android:layout_alignParentLeft="true"
		            android:textStyle="bold"/>
		        
		        <Button
		            android:id="@+id/btnSeleccionar"
		            android:layout_width="108dp"
		            android:layout_height="25dp"
		            android:layout_marginLeft="1dp"
		            android:textSize="15sp"
		            android:text="@string/btn_seleccionar" 
		            android:background="@drawable/draw_button_gen"
		            android:textColor="@color/white"
		            android:onClick="EventoSeleccionar"		            
		            android:layout_alignParentRight="true"
		            android:textStyle="bold"/>
			</RelativeLayout>	     	        
	    </LinearLayout>	    
	</LinearLayout>
</LinearLayout>
