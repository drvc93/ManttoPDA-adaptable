<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ftablet1"
    android:orientation="vertical">

  	<TableLayout android:id="@+id/linearLayout1"
  		android:layout_width="fill_parent"  
    	android:layout_height="wrap_content"
     	android:stretchColumns="1" 
     	android:layout_marginTop="20dp">
        
      	<TableRow>
      	    
      	    <TextView
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="TIPO INSPECCIÓN"
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/ttipo2"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="35dip"
                android:layout_weight="0.2"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textSize="23dp"
                android:textColor="#808080"
                android:textStyle="bold"/>
			
			<TextView
			    android:id="@+id/tlestado2"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="ESTADO"
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/testado2"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="20dip"
                android:layout_weight="0.2"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textSize="23dp"
                android:textColor="#808080"
                android:textStyle="bold"/>
            
     </TableRow>
     
</TableLayout>

<TableLayout android:id="@+id/linearLayout2"
	android:layout_width="fill_parent"  
    android:layout_height="wrap_content"
    android:layout_below="@+id/linearLayout1"
    android:stretchColumns="1" >  
    
    <TableRow >
        
    	<TextView
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="USUARIO INSPECCIÓN"
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->

            <TextView
                android:id="@+id/tusuarioinsp2"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="35dip"
                android:layout_weight="0.2"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textSize="23dp"
                android:textColor="#808080"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->
        
        	<TextView
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="FECHA INSPECCIÓN"
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->

            <TextView
                android:id="@+id/tfecha2"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="20dip"
                android:layout_weight="0.2"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textSize="23dp"
                android:textColor="#808080"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->	
    </TableRow>
    
</TableLayout>

<TableLayout android:id="@+id/linearLayout3"
	android:layout_width="fill_parent"  
    android:layout_height="wrap_content"
    android:layout_below="@+id/linearLayout2"
    android:stretchColumns="1" >  
    
    <TableRow >
        
        <TextView
                android:layout_width="0dip"
                android:layout_height="60dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.06"
                android:gravity="left"
                android:text="AREA ESPECIFICA DEL PROBLEMA"
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        
		<TextView
                android:id="@+id/etcomentario2"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="20dip"
                android:layout_weight="0.2"
                android:textSize="23dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#808080"
                android:enabled="false"
                android:textStyle="bold"/>
		
     </TableRow>
</TableLayout>

<TableLayout 
	android:id="@+id/linearLayout4"
   	android:layout_width="fill_parent"  
    android:layout_height="wrap_content"
    android:layout_below="@+id/linearLayout3"
    android:stretchColumns="1" >  
    
    <TableRow > 
		
        <TextView
            android:id="@+id/tlblmaquina2"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_marginLeft="40dip"
            android:layout_weight="0.06"
            android:gravity="left"
            android:text="PROBLEMA DETECTADO"
            android:textSize="23dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/etmaquina2"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_marginLeft="40dip"
            android:layout_weight="0.2"
            android:textSize="23dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#808080"
            android:textStyle="bold"
            android:layout_marginRight="20dip"
            android:enabled="false"/>
        
     </TableRow>
</TableLayout>
    
<TableLayout 
	android:id="@+id/linearLayout5"
   	android:layout_width="fill_parent"  
    android:layout_height="wrap_content"
    android:layout_below="@+id/linearLayout4"
    android:stretchColumns="1" >  
    
    <TableRow > 
		<TextView
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.06"
                android:gravity="left"
                android:text="C.COSTO"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="23dp"/><!-- android:visibility="invisible" -->

            <TextView
                android:id="@+id/etccosto2"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="20dip"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text=""
                android:textSize="23dp"/><!-- android:visibility="invisible"
                android:layout_marginLeft="40dip" -->
    </TableRow>
</TableLayout>

<TableLayout android:id="@+id/linearLayout6"
	android:layout_width="fill_parent"  
    android:layout_below="@+id/linearLayout5"
    android:layout_height="wrap_content"
    android:stretchColumns="1" >   
      
	<TableRow >
	    
			<TextView
                android:layout_width="40dip"
                android:layout_height="30dip"
                android:layout_margin="1dip"
                android:background="#555555"
            	android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="12dp"
                android:text="N°"
            	android:typeface="sans"/>
			
			<TextView
                android:layout_width="40dip"
                android:layout_height="30dip"
                android:layout_margin="1dip"
                android:background="#555555"
            	android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="12dp"
                android:text="TIPO REVISIÓN"
            	android:typeface="sans"/>

            <TextView
                android:layout_margin="1dip"
                android:layout_width="850dip"
                android:layout_height="30dip"
                android:background="#555555"
            	android:textColor="#FFFFFF"
                android:ellipsize="end"
                android:gravity="center"
                android:text="COMENTARIO"
                android:textSize="12dp"
                android:typeface="sans" />

            <TextView
                android:layout_margin="1dip"
                android:layout_width="150dip"
                android:gravity="center"
                android:layout_height="30dip"
                android:ellipsize="end"
                android:background="#555555"
            	android:textColor="#FFFFFF"
                android:text="FOTO"
                android:typeface="sans"/>
            	
    </TableRow>
    
</TableLayout>

<LinearLayout
	android:id="@+id/linearLayout7"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_below="@+id/listainspeccion"
    android:orientation="horizontal" >

	</LinearLayout>
			
		<ListView
	        android:id="@+id/listainspecciong2"
	        android:layout_width="fill_parent"
	        android:layout_height="100dp"
	        android:layout_above="@+id/sendd2"
	        android:layout_below="@+id/linearLayout6"
	        android:descendantFocusability="beforeDescendants"
	        android:divider="@android:color/transparent"
	        android:dividerHeight="5dip">
	    </ListView>
		
     	<Button
        	android:id="@+id/sendd2"
        	android:layout_width="130dip"
         	android:layout_height="50dip"
         	android:layout_alignParentBottom="true"
         	android:layout_alignParentLeft="true"
         	android:layout_margin="10dip"
         	android:layout_marginBottom="16dp"
         	android:layout_marginLeft="509dp"
         	android:text="RETORNAR"
         	android:textSize="15dp"
         	android:background="@drawable/circular_button_2"
         	style="@style/ButtonBACK"/><!-- android:background="#FFFF00" -->

     	<Button
     	    android:layout_toRightOf="@+id/sendd2"
         	android:id="@+id/env2"
         	android:layout_width="130dip"
         	android:visibility="invisible"
         	android:layout_height="50dip"
         	android:layout_below="@+id/listainspecciong2"
         	android:layout_margin="10dip"
         	android:layout_marginLeft="464dp"
         	android:text="ENVIAR"
         	android:textSize="15dp"
         	android:background="@drawable/circular_button_2"
         	style="@style/ButtonSEND" /><!-- android:background="#FFFF00" -->

</RelativeLayout>