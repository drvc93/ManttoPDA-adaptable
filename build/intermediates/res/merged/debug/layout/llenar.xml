<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ftablet1"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:layout_marginTop="20dp">

        <TableRow>

            <TextView
                android:layout_marginLeft="40dip"
                android:layout_width="0dip"
                android:layout_weight="0.2"
                android:layout_height="40dip"
                android:gravity="left"
                android:text="TIEMPO TRANSC."
                android:visibility="invisible"
                android:textColor="#FFFFFF"
            	android:textSize="23dp"
            	android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->

            <TextView
                android:id="@+id/ttiemp"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text=""
                android:textSize="23dp"
                android:visibility="invisible"
                android:textColor="#808080"
            	android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->

            <TextView
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="MÁQUINA"
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->

            <TextView
                android:id="@+id/tmaquina"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textSize="23dp"
                android:textColor="#808080"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:stretchColumns="1" >

        <TableRow>

            <TextView
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="INSPECTOR"
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->

            <TextView
                android:id="@+id/tvinllusuario"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textSize="23dp"
                android:textColor="#808080"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->

            <TextView
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="DESCRIPCION"
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->

            <TextView
                android:id="@+id/tdescripcion"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textSize="23dp"
                android:textColor="#808080"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:stretchColumns="1" >

        <TableRow>

            <TextView
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="CONDICIÓN MÁQUINA"
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->

            <Spinner
                android:id="@+id/tcondi"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                style="@style/SpinnerSG"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="PERIODO"
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->

            <Spinner
                android:id="@+id/tperiodo"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                style="@style/SpinnerSG"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/linearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:stretchColumns="1" >

        <TableRow>

            <TextView
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="ESTADO"
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->

            <TextView
                android:id="@+id/testadoca"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="SIN ESTADO"
                android:textSize="23dp"
                android:textColor="#808080"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->

            <TextView
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="COMENTARIO"
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->

            <Button
                android:id="@+id/tcomentin"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="INGRESAR.."
                style="@style/SpinnerSG"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/linearLayout5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:stretchColumns="1" >

        <TableRow>

            <TextView
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="FECHA INICIO"
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->

            <TextView
                android:id="@+id/tfin"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text=" "
                android:textSize="23dp"
                android:textColor="#808080"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->

            <TextView
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:gravity="left"
                android:text="FECHA FIN"
                android:textSize="23dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->

            <TextView
                android:id="@+id/tffin"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_marginLeft="40dip"
                android:layout_weight="0.2"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textSize="23dp"
                android:textColor="#808080"
                android:textStyle="bold"/><!-- android:background="@drawable/cuadro" -->
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/linearLayout6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout5"
        android:stretchColumns="1" >

        <TableRow>

            <TextView
                android:layout_width="40dip"
                android:layout_height="30dip"
                android:layout_margin="1dip"
                android:background="#555555"
            	android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="12dp"
                android:text="Nª"
            	android:typeface="sans"/>
            	<!-- android:layout_width="0dip"
            	android:layout_weight="0.2" -->

            <TextView
                android:layout_margin="1dip"
                android:layout_weight="0.2"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:background="#555555"
            	android:textColor="#FFFFFF"
                android:ellipsize="end"
                android:gravity="center"
                android:text="INSPECCIÓN"
                android:textSize="12dp"
                android:typeface="sans" />

            <TextView
                android:layout_margin="1dip"
                android:layout_width="100dip"
                android:gravity="center"
                android:layout_height="30dip"
                android:background="#555555"
            	android:textColor="#FFFFFF"
                android:text="TIPO INSP."
                android:textSize="12dp"
                android:typeface="sans" />
            	<!-- android:layout_width="0dip"
            	android:layout_weight="0.2" -->

            <TextView
                android:layout_margin="1dip"
                android:layout_width="80dip"
                android:gravity="center"
                android:layout_height="30dip"
                android:background="#555555"
            	android:textColor="#FFFFFF"
                android:text="% MIN."
                android:textSize="12dp"
                android:typeface="sans"/>
            	<!-- android:layout_width="0dip"
            	android:layout_weight="0.2" -->

            <TextView
                android:layout_margin="1dip"
                android:layout_width="80dip"
                android:gravity="center"
                android:layout_height="30dip"
                android:background="#555555"
            	android:textColor="#FFFFFF"
                android:text="% MAX."
                android:textSize="12dp"
                android:typeface="sans"/>
            	<!-- android:layout_width="0dip"
            	android:layout_weight="0.2" -->

            <TextView
                android:layout_margin="1dip"
                android:layout_width="100dip"
                android:gravity="center"
                android:layout_height="30dip"
                android:background="#555555"
            	android:textColor="#FFFFFF"
                android:text="% INSP."
                android:textSize="12dp" />
            	<!-- android:layout_width="0dip"
            	android:layout_weight="0.2" -->

            <TextView
                android:layout_margin="1dip"
                android:layout_width="100dip"
                android:gravity="center"
                android:layout_height="30dip"
                android:background="#555555"
            	android:textColor="#FFFFFF"
                android:text="ESTADO"
                android:textSize="12dp"
                android:typeface="sans"/>
				<!-- android:layout_width="0dip"
				android:layout_weight="0.2" -->
            
            <TextView
                android:layout_margin="1dip"
                android:layout_width="120dip"
                android:gravity="center"
                android:layout_height="30dip"
                android:ellipsize="end"
                android:background="#555555"
            	android:textColor="#FFFFFF"
                android:text="COMENTARIO"
                android:textSize="12dp"
                android:typeface="sans"/>
            	<!-- android:layout_width="0dip"
            	android:layout_weight="0.2" -->

            <TextView
                android:layout_margin="1dip"
                android:layout_width="150dip"
                android:gravity="center"
                android:layout_height="30dip"
                android:ellipsize="end"
                android:background="#555555"
            	android:textColor="#FFFFFF"
                android:text="ADJUNTAR FOTO"
                android:typeface="sans"/>
            	<!-- android:layout_width="0dip"
            	android:layout_weight="0.2" -->
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/listainspeccion"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/linearLayout7"
        android:layout_below="@+id/linearLayout6"
        android:descendantFocusability="beforeDescendants"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dip" >
    </ListView>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/send"
            android:layout_width="130dip"
            android:layout_height="50dip"
            android:layout_margin="10dip"
            android:background="@drawable/circular_button_2"
            android:text="GUARDAR REPORTE"
            android:textSize="15dp"
            style="@style/ButtonGR"/><!-- android:background="#FFFF00" -->
    </LinearLayout>

</RelativeLayout>