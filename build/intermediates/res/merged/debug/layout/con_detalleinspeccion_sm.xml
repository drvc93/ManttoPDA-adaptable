<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="1" >

    <TableRow>

        <TextView
            android:id="@+id/tnumerod"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:layout_margin="1dip"
            android:text="01"
            android:textSize="15dp" 
            android:textColor="#FFFFFF"
            android:paddingLeft="10dip"/>
        	<!-- android:layout_width="0dip"
            android:layout_weight="0.5" -->

        <TextView
            android:id="@+id/tdetalled"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="1dip"
            android:layout_weight="0.5"
            android:text=" - Estado Tacpa"
            android:textSize="15dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/tsystemad"
            android:layout_width="100dip"
            android:layout_height="fill_parent"
            android:layout_margin="1dip"
            android:text="SM"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"/>
        	<!-- android:layout_width="0dip"
        	android:layout_weight="0.5" -->

        <TextView
            android:id="@+id/tminimod"
            android:layout_width="80dip"
            android:layout_height="fill_parent"
            android:layout_margin="1dip"
            android:text="70"
            android:textSize="15dp"
            android:textColor="#FFFFFF"/>
        	<!-- android:layout_width="0dip"
        	android:layout_weight="0.5" -->

        <TextView
            android:id="@+id/tmaximod"
            android:layout_width="80dip"
            android:layout_height="fill_parent"
            android:layout_margin="1dip"
            android:text="100"
            android:textSize="15dp"
            android:textColor="#FFFFFF"/>
        	<!-- android:layout_width="0dip"
        	android:layout_weight="0.5" -->

        <EditText
            android:id="@+id/tllenarsmd"
            android:layout_width="100dip"
            android:layout_height="fill_parent"
            android:layout_gravity="top"
            android:layout_margin="1dip"
            android:hint="Llenar"
            android:inputType="numberDecimal"
            android:textSize="15dp"
            android:textColor="#FFFFFF"/>
        	<!-- android:layout_width="0dip"
        	android:layout_weight="0.5"
        	 -->

        <TextView
            android:id="@+id/tokid"
            android:layout_width="100dip"
            android:layout_height="fill_parent"            
            android:layout_margin="1dip"
            android:background="@drawable/ok_mal"
            android:text="OK"
            android:textSize="15dp"
            android:textColor="#000000"
            android:paddingLeft="10dip"
            android:gravity="center_vertical"/>
        	<!-- android:layout_gravity="center"
        	android:paddingTop="10dip"
        	android:layout_width="0dip"
        	android:layout_weight="0.5" -->

        <Button
            android:id="@+id/bcomentariod"
            android:layout_width="120dip"
            android:layout_height="fill_parent"
            android:layout_margin="1dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Comentario"
            android:textSize="15dp" />
        	<!-- android:layout_width="0dip"
        	android:layout_weight="0.5"
        	android:layout_gravity="center" -->

        <Button
            android:id="@+id/bimagend"
            android:layout_width="150dip"
            android:layout_height="fill_parent"
            android:layout_margin="1dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="sin foto"
            android:textSize="15dp" />
        	<!-- android:layout_width="0dip"
        	android:layout_weight="0.5"
        	android:layout_gravity="center" -->
        	
    </TableRow>

</TableLayout>