<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="true"
    android:orientation="vertical"
    android:layout_marginBottom="2dp">

    <LinearLayout 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:orientation="horizontal">
        
        <!-- Línea -->
        <TextView	        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:textSize="14dp"	       
	        android:layout_marginLeft="2dp"	        
	        android:textColor="@color/predet"
	        android:textStyle="bold"
	        android:text="@string/mantinspecciontdetalle_linea"
	        android:visibility="gone">
    	</TextView>
        
        <TextView
	        android:id="@+id/lblLinea"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"	        
	        android:textSize="14dp"	        
	        android:layout_marginLeft="3dp"	        
	        android:textColor="@color/yellow"
	        android:layout_weight="1">
    	</TextView>
        
        <!-- Inspección -->
        <TextView	        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:textSize="14dp"	       
	        android:layout_marginLeft="2dp"	        
	        android:textColor="@color/predet"
	        android:textStyle="bold"
	        android:text="@string/mantinspecciontdetalle_desc">
    	</TextView>
        
        <TextView
	        android:id="@+id/lblInspeccion"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"	        
	        android:textSize="14dp"	        
	        android:layout_marginLeft="3dp"	        
	        android:textColor="@color/predet"
	        android:layout_weight="1">
        </TextView>
        
    </LinearLayout>
    
    <LinearLayout 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:orientation="horizontal">
        
        <!-- Tipo Inspección -->
        <TextView	        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:textSize="14dp"	       
	        android:layout_marginLeft="2dp"	        
	        android:textColor="@color/predet"
	        android:textStyle="bold"
	        android:text="@string/mantinspecciontdetalle_tipoi">
    	</TextView>
        
        <TextView
	        android:id="@+id/lblTipoInsp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:textSize="14dp"	        
	        android:layout_marginLeft="3dp"	        
	        android:textColor="@color/predet"
	        android:layout_weight="1">
    	</TextView>
        
        <!-- % Mín. -->
        <TextView	        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:textSize="14dp"	       
	        android:layout_marginLeft="2dp"	        
	        android:textColor="@color/predet"
	        android:textStyle="bold"
	        android:text="@string/mantinspecciontdetalle_porcmin">
    	</TextView>
        
        <TextView
	        android:id="@+id/lblPorcMin"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:textSize="14dp"	        
	        android:layout_marginLeft="3dp"	        
	        android:textColor="@color/predet"
	        android:layout_weight="1">
    	</TextView>
    	
        <!-- % Máx. -->
        <TextView	        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:textSize="14dp"	       
	        android:layout_marginLeft="2dp"	        
	        android:textColor="@color/predet"
	        android:textStyle="bold"
	        android:text="@string/mantinspecciontdetalle_porcmax">
    	</TextView>
        
        <TextView
	        android:id="@+id/lblPorcMax"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:textSize="14dp"	        
	        android:layout_marginLeft="3dp"	        
	        android:textColor="@color/predet"
	        android:layout_weight="1">
    	</TextView>
        
    </LinearLayout>
    
    <LinearLayout 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:orientation="horizontal">
        
        <!-- % Insp. -->
        <TextView	        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:textSize="14dp"	       
	        android:layout_marginLeft="2dp"	        
	        android:textColor="@color/predet"
	        android:textStyle="bold"
	        android:visibility="gone"
	        android:text="@string/mantinspecciontdetalle_porcinsp">
    	</TextView>
        
        <TextView
	        android:id="@+id/lblPorcInsp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:textSize="14dp"	        
	        android:layout_marginLeft="3dp"	        
	        android:textColor="@color/predet"
	        android:visibility="gone"
	        android:layout_weight="1">
    	</TextView>
        
        <!-- % Estado -->
        <TextView	        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:textSize="14dp"	       
	        android:layout_marginLeft="2dp"	        
	        android:textColor="@color/predet"
	        android:textStyle="bold"
	        android:text="@string/mantinspecciontdetalle_estado">
    	</TextView>
        
        <!-- <TextView
	        android:id="@+id/lblEstado"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:textSize="15dp"	        
	        android:layout_marginLeft="3dp"	        
	        android:textColor="@color/predet"
	        android:layout_weight="1">
    	</TextView> -->
        
        <Spinner
	        android:id="@+id/cboEstadoDet"
	        android:layout_gravity="center"
	        android:layout_width="80dp"
	        android:layout_margin="1dip"
	        android:layout_height="25dp"
	        android:paddingLeft="2dp"
			android:paddingRight="2dp"
			android:paddingBottom="1dp"
			android:paddingTop="1dp"
	        android:textSize="14dp"
	        android:background="@drawable/draw_spinner_fondo"/>
        
        <Button
	        android:id="@+id/btnComentarioDet"
	        android:layout_width="25dp"
	        android:layout_height="20dp"
	        android:layout_marginLeft="3dp"
	        android:background="@drawable/flat_selector"
			android:textColor="@color/white"
			android:textStyle="bold"
			android:text="@string/mantinspecciontdetalle_coment"
			android:focusable="false"
			android:textSize="14dp"
			android:focusableInTouchMode="false"/><!-- android:onClick="EventoComentarioDet" -->
        
        <Button
	        android:id="@+id/btnFotoDet"
	        android:layout_width="25dp"
	        android:layout_height="20dp"
	        android:layout_marginLeft="3dp"
	        android:background="@drawable/flat_selector"
			android:textColor="@color/white"
			android:textStyle="bold"
			android:text="@string/mantinspecciontdetalle_foto"
			android:textSize="14dp"/><!-- android:onClick="EventoFotoDet" -->
        
   </LinearLayout>
   
