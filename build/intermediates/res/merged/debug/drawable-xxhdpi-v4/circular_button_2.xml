<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            ///aca va cuando se presiona
            <!-- <solid
                android:color="#ff0000"/> -->
            <gradient 
			    android:startColor="#D3D3D3"
				android:endColor="#A9A9A9"
				android:angle="270"/>
            <!-- <stroke
                android:width="1dp"
                android:color="#ffff2f"/>-->
            <stroke android:width="2dp" android:color="#ffff2f"/>
            <!-- <corners
                android:radius="600dp"/>-->
            <corners 
		     	android:bottomRightRadius="8dp" 
		     	android:bottomLeftRadius="8dp" 
		  		android:topLeftRadius="8dp"
		  		android:topRightRadius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            ///gradient es como se ve al sin presionar
            <gradient 
			    android:startColor="#A9A9A9"
				android:endColor="#D3D3D3"
				android:angle="45"/>
            <!-- <gradient
                android:startColor="#ffffff"
                android:endColor="#ee1100"
                android:angle="225"/>
                -->
            ///stroke es el borde
            <!-- <stroke
                android:width="1dp"
                android:color="#850055"/>-->
            <stroke android:width="2dp" android:color="#850055"/>
            <!-- <corners
                android:radius="600dp"/>-->
            <corners 
		     	android:bottomRightRadius="8dp" 
		     	android:bottomLeftRadius="8dp" 
		  		android:topLeftRadius="8dp"
		  		android:topRightRadius="8dp"/>
        </shape>
    </item>
</selector>