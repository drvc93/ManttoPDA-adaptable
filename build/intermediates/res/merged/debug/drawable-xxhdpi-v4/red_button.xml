<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            ///aca va cuando se presiona
            <solid
                android:color="#ff0000"/>
            <stroke
                android:width="1dp"
                android:color="#ffff2f"/>
            <corners
                android:radius="6dp"/>
        </shape>
    </item>
    <item>
        <shape>
            ///gradient es como se ve al sin presionar
            <gradient
                android:startColor="#ffffff"
                android:endColor="#ee1100"
                android:angle="225"/>
            ///stroke es el borde
            <stroke
                android:width="1dp"
                android:color="#850055"/>
            <corners
                android:radius="6dp"/>
        </shape>
    </item>
</selector>